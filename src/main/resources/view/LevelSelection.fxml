<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="keltiga.controller.LevelSelectionController">
    <children>

        <Label fx:id="userLabel" layoutX="50" layoutY="50" text="User: "/>


        <Label layoutX="50" layoutY="100" text="Select an Island:"/>
        <Button layoutX="150" layoutY="130" text="Java Island" onAction="#selectJavaIsland"/>
        <Button layoutX="250" layoutY="130" text="Reef Island" onAction="#selectReefIsland"/>
        <Button layoutX="350" layoutY="130" text="Deep Sea Island" onAction="#selectDeepSeaIsland"/>


        <Label layoutX="50" layoutY="200" text="Select Difficulty:"/>
        <Button layoutX="150" layoutY="230" text="Easy" onAction="#selectDifficultyEasy"/>
        <Button layoutX="250" layoutY="230" text="Medium" onAction="#selectDifficultyMedium"/>
        <Button layoutX="350" layoutY="230" text="Hard" onAction="#selectDifficultyHard"/>


        <Button layoutX="200" layoutY="300" text="Play Game" onAction="#startGame"/>


        <Button layoutX="350" layoutY="300" text="Switch User" onAction="#switchUser"/>
    </children>
</AnchorPane>
