<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.keltiga.mechiu.GameController">

  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <!-- Label for displaying score -->
  <Label fx:id="scoreLabel" text="Score: 0" />

  <!-- TextField for typing words -->
  <TextField fx:id="typingField" promptText="Type the word..." onAction="#onWordTyped" />

  <!-- Button to start the game (optional) -->
  <Button text="Start Game" onAction="#startGame" />

</VBox>
